{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["DOM", "ES2019"],
        "declaration": true,
    },
    "exclude": ["./node_modules"],
    "include": ["./src"]
}
