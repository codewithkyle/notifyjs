{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["DOM", "ES2020"],
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "exclude": ["./node_modules"],
    "include": ["./src"]
}
