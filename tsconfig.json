{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ]
    },
    "exclude": [
        "./node_modules",
        "./docs",
    ],
    "include": [
        "./src"
    ]
}
